.container {
    display: flex;
    flex-direction: column;
}

.head-image {
    width: 100%;
    height: 460rpx;
}

.audio {
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top: 180rpx;
    opacity: 0.6;
}

.author-date {
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.avatar {
    vertical-align: middle;
    height: 64rpx;
    width: 64rpx;
}

.author {
    font-size: 30rpx;
    font-weight: 400;
    margin-left: 30rpx;
    vertical-align: middle;
    color: #666;
}

.const-text {
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
    vertical-align: middle;
}

.date {
    font-size: 30rpx;
    font-weight: 400;
    vertical-align: middle;
    margin-left: 30rpx;
    color: #666;
}

.title {
    margin-left: 40rpx;
    margin-right: 40rpx;
    font-weight: 300;
    margin-top: 30rpx;
    letter-spacing: 2px;
    color: #4b556c;
}

.tool {
    margin-top: 20rpx;
}

.circle-img {
    float: right;
    vertical-align: middle;
    margin-right: 40rpx;
}

.circle-img image {
    width: 90rpx;
    height: 90rpx;
}

button[size="mini"] {
    padding: 0;
    border: none;
}

.share-btn {
    margin-left: 30rpx;
    width: 90rpx;
    height: 90rpx;
    display: none;
}

.share-img {
    margin-left: 0;
}

.horizon {
    width: 660rpx;
    height: 2px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    z-index: -99;
}

.detail {
    color: #666;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 20rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
}
